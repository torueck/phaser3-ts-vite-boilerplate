{
  "name": "phaser3-ts-vite-boilerplate",
  "version": "1.0",
  "description": "Boilerplate to quickly set up phaser 3 with TypeScript and Vite. Includes linting with ESLint and formatting with Prettier.",
  "keywords": [
    "boilerplate",
    "phaser",
    "typescript",
    "vite",
    "eslint",
    "prettier",
    "game"
  ],
  "author": "Torsten Ueckert",
  "license": "MIT",
  "repository": {
    "type": "git"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --cache .",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "phaser": "^3.52.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vite": "^2.9.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
